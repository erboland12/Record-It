<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent">        <LinearLayout            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="?attr/backgroundcolor"            tools:context=".records.AddRecord">                <EditText                    android:id="@+id/editText"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:width="150pt"                    android:backgroundTint="?attr/textcolor"                    android:textColor="?attr/textcolor"                    android:layout_gravity="center"                    android:layout_marginTop="5pt"                    android:textSize="24sp"                    android:hint="@string/add_record_album"/><!--                <TextView--><!--                    android:id="@+id/textView"--><!--                    android:layout_width="wrap_content"--><!--                    android:layout_height="wrap_content"--><!--                    android:gravity="center"--><!--                    android:text="@string/add_record_artist"--><!--                    android:textColor="?attr/textcolor"--><!--                    android:textSize="25dp"--><!--                    android:layout_marginTop="10pt"--><!--                    android:layout_gravity="center"/>-->                <EditText                    android:id="@+id/editText2"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:width="150pt"                    android:backgroundTint="?attr/textcolor"                    android:textColor="?attr/textcolor"                    android:textSize="24sp"                    android:layout_marginTop="10pt"                    android:layout_gravity="center"                    android:hint="@string/add_record_artist"/>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10pt"                    android:layout_gravity="center"                    android:orientation="horizontal">                        <TextView                            android:id="@+id/genre_title"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="@string/add_record_genre"                            android:textColor="?attr/textcolor"                            android:textSize="24sp"                            android:gravity="center"                            android:layout_marginTop="10pt"                            android:layout_gravity="start"                            android:layout_marginStart="18pt"/>                        <Spinner                            android:id="@+id/genre_spinner"                            android:layout_width="200dp"                            android:layout_height="50dp"                            android:background="@android:drawable/btn_dropdown"                            android:spinnerMode="dropdown"                            android:textColor="?attr/textcolor"                            android:layout_gravity="end"                            android:layout_marginTop="5pt"                            android:layout_marginStart="5pt"/>                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10pt"                    android:layout_gravity="center"                    android:orientation="horizontal">                        <TextView                            android:id="@+id/textView3"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_gravity="start"                            android:layout_marginStart="18pt"                            android:gravity="center"                            android:text="@string/add_record_rating"                            android:textColor="?attr/textcolor"                            android:textSize="24sp" />                        <RatingBar                            android:id="@+id/add_record_rating"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:foregroundTint="@color/colorWhite"                            android:gravity="center"                            android:layout_gravity="end"                            android:layout_marginTop="2pt"                            android:layout_marginStart="5pt" />                </LinearLayout>                <TextView                    android:id="@+id/textView4"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/add_record_desc"                    android:textColor="?attr/textcolor"                    android:layout_marginTop="10pt"                    android:layout_marginStart="18pt"                    android:textSize="24sp"                    android:layout_gravity="start"/>                <EditText                    android:id="@+id/editText3"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:width="150pt"                    android:height="75pt"                    android:layout_marginTop="5pt"                    android:background="@drawable/layout_border"                    android:ems="10"                    android:gravity="left"                    android:inputType="textMultiLine"                    android:padding="5dp"                    android:layout_gravity="center"/>                <TextView                    android:id="@+id/textView5"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/add_record_photo"                    android:textColor="?attr/textcolor"                    android:textSize="24sp"                    android:layout_gravity="center"                    android:layout_marginTop="10pt"/>                <ImageView                    android:id="@+id/add_record_image_view"                    android:layout_width="200dp"                    android:layout_height="200dp"                    android:src="@drawable/record"                    android:layout_gravity="center"                    android:layout_marginTop="10pt"                    android:layout_marginStart="18pt"                    android:layout_marginEnd="18pt"                    android:adjustViewBounds="true">                </ImageView>                <Button                    android:id="@+id/browse_btn"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:padding="20dp"                    android:text="@string/add_record_browse"                    android:layout_gravity="center"                    android:layout_marginTop="5pt"/>                <Button                    android:id="@+id/addRecordBtn"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:background="?attr/buttoncolor"                    android:layout_marginTop="20pt"                    android:layout_marginBottom="5pt"                    android:gravity="center"                    android:padding="20dp"                    android:text="@string/add_record"                    android:textSize="28sp"                    android:layout_gravity="center" />        </LinearLayout></ScrollView>