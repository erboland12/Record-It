<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent">        <androidx.constraintlayout.widget.ConstraintLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="?attr/backgroundcolor"            tools:context=".records.AddRecord">                <Button                    android:id="@+id/addRecordBtn"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="736dp"                    android:gravity="center"                    android:text="@string/main_add_button"                    android:background="?attr/buttoncolor"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintHorizontal_bias="0.498"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent" />                <EditText                    android:id="@+id/editText2"                    android:layout_width="303dp"                    android:layout_height="45dp"                    android:width="50pt"                    android:gravity="center"                    android:backgroundTint="?attr/textcolor"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toBottomOf="@+id/editText3"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.318" />                <EditText                    android:id="@+id/editText"                    android:layout_width="303dp"                    android:layout_height="45dp"                    android:width="50pt"                    android:gravity="center"                    android:backgroundTint="?attr/textcolor"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toBottomOf="@+id/editText3"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.13" />                <EditText                    android:id="@+id/editText3"                    android:layout_width="303dp"                    android:layout_height="45dp"                    android:ems="10"                    android:gravity="center"                    android:inputType="textMultiLine"                    android:backgroundTint="?attr/textcolor"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.814" />                <RatingBar                    android:id="@+id/add_record_rating"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginBottom="260dp"                    android:gravity="center"                    android:foregroundTint="@color/colorWhite"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintHorizontal_bias="0.497"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="1.0" />                <Spinner                    android:id="@+id/genre_spinner"                    android:layout_width="190dp"                    android:layout_height="51dp"                    android:width="75pt"                    android:background="@android:drawable/btn_dropdown"                    android:gravity="center"                    android:spinnerMode="dropdown"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintHorizontal_bias="0.489"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.436" />                <TextView                    android:id="@+id/genre_title"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="@string/add_record_genre"                    android:textSize="25dp"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toBottomOf="@+id/editText3"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintHorizontal_bias="0.493"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.434" />                <TextView                    android:id="@+id/textView3"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="@string/add_record_rating"                    android:textSize="25dp"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.534" />                <TextView                    android:id="@+id/textView2"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="@string/add_record_album"                    android:textSize="25dp"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toBottomOf="@+id/editText3"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.049" />                <TextView                    android:id="@+id/textView"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:text="@string/add_record_artist"                    android:textSize="25dp"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toBottomOf="@+id/editText3"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintHorizontal_bias="0.498"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.234" />                <TextView                    android:id="@+id/textView4"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/add_record_desc"                    android:textSize="25dp"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.716" />                <TextView                    android:id="@+id/textView5"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="@string/add_record_photo"                    android:textSize="25dp"                    android:textColor="?attr/textcolor"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.89" />                <Button                    android:id="@+id/browse_btn"                    android:layout_width="186dp"                    android:layout_height="45dp"                    android:text="@string/add_record_browse"                    android:background="?attr/buttoncolor"                    app:layout_constraintBottom_toTopOf="@+id/addRecordBtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent"                    app:layout_constraintVertical_bias="0.971" />        </androidx.constraintlayout.widget.ConstraintLayout></ScrollView>